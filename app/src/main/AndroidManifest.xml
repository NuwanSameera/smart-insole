<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="uom.synergen.fyp.smart_insole.gait_analysis.android_agent">

    <uses-sdk android:minSdkVersion="19" />

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.SEND_SMS"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.Light">

        <activity
            android:name="uom.synergen.fyp.smart_insole.gait_analysis.MainActivity"
            android:label="@string/title_activity_main">

            <intent-filter>
                <action android:name="uom.synergen.fyp.smart_insole.gait_analysis.MainActivity" />
                <category android:name="android.intent.category.DEFAULT" />
             </intent-filter>

        </activity>
        <activity
            android:name="uom.synergen.fyp.smart_insole.gait_analysis.LoginActivity"
            android:label="@string/title_activity_login">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name="uom.synergen.fyp.smart_insole.gait_analysis.SetupActivity"
            android:label="@string/title_activity_main">
            <intent-filter>
                <action android:name="uom.synergen.fyp.smart_insole.gait_analysis.SetupActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>


    </application>

</manifest>